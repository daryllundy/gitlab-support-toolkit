<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">Upload Log File</h1>
      
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-body">
              <%= form_with model: @log_file, local: true, multipart: true do |form| %>
                <% if @log_file.errors.any? %>
                  <div class="alert alert-danger">
                    <h4><%= pluralize(@log_file.errors.count, "error") %> prohibited this log file from being saved:</h4>
                    <ul class="mb-0">
                      <% @log_file.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="mb-3">
                  <%= form.label :file, "Log File", class: "form-label" %>
                  <%= form.file_field :file, class: "form-control", accept: ".log,.txt,.out", required: true %>
                  <div class="form-text">
                    Supported formats: .log, .txt, .out files. Maximum size: 50MB
                  </div>
                </div>

                <div class="mb-3">
                  <%= form.label :description, "Description (Optional)", class: "form-label" %>
                  <%= form.text_area :description, class: "form-control", rows: 3, 
                                     placeholder: "Brief description of the log file or issue being investigated" %>
                </div>

                <div class="d-flex justify-content-between">
                  <%= link_to "Cancel", log_files_path, class: "btn btn-secondary" %>
                  <%= form.submit "Upload Log File", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>